<div class="min-h-screen bg-gray-100 py-12">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-xl p-6">
      <h1 class="text-3xl font-bold mb-8 text-gray-800 border-b pb-4">TODOリスト</h1>

      <%= turbo_frame_tag "todo_form" do %>
        <%= form_with(model: @todo, local: true, class: "mb-8") do |f| %>
          <div class="flex gap-3">
            <%= f.text_field :title, 
                class: "flex-1 p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", 
                placeholder: "新しいタスクを入力" %>
            <%= f.submit "追加", 
                class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 
                       transition-colors duration-200 shadow-sm font-medium" %>
          </div>
        <% end %>
      <% end %>

      <%= turbo_frame_tag "todos" do %>
        <%= render "todos" %>
      <% end %>
    </div>
  </div>
</div>
